<div class="well">
  <span class="package-name"><%= @package.name %></span>
  <span class="package-stats">Stats</span>
  <span class="package-description"><%= @package.description %></span>
</div>
<div class="col-md-9 package">
  <div class="well package-info">
    <%= render partial: 'shared/package', object: @package%>
  </div>
</div>
<%= render partial: 'shared/sidebar',
    locals: {sidebar_title: "Other related packages in the #{@package.category.name} category",
             list_type: "package", item_list: @package.category.packages.where.not(name: @package.name)}
%>
